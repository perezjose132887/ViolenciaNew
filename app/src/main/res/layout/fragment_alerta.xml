<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlertaFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginRight="20dp"
        android:text="ALERTA"
        android:textAlignment="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/celesteFuerteUno"
        android:textSize="25dp"
        />

    <ImageButton
        android:id="@+id/ibtnAlerta"
        android:layout_width="match_parent"
        android:layout_height="307dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="32dp"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:src="@drawable/ayuda" />

    <TextView
        android:id="@+id/txtObt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#FF0000"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Obtener coordendas y despues click en la imagen" />

    <Button
        android:id="@+id/btnObtenerCoordenadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:text="Obtener Coordendas"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"/>


    <EditText
        android:id="@+id/etLatitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/etLongitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:inputType="textPersonName"
        android:text="" />


</LinearLayout>