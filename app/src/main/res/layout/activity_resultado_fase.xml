<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ResultadoFaseActivity"
    android:background="@color/celesteBajoUno">

    <TextView
        android:id="@+id/txtMensajeResultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resultado"
        tools:layout_editor_absoluteX="117dp"
        android:layout_gravity="center"
        android:textSize="19sp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteY="25dp"
        android:textColor="@color/celesteFuerteDos"/>
    <TextView
        android:id="@+id/txtMensaje2Resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gracias por realizar el test, recuerda que esto tiene un propósito y es brindar conciencia  sobre la violencia , nunca es tarde para reaccionar y poner un ¡ALTO!"
        tools:layout_editor_absoluteX="117dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteY="25dp" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimation"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/bien"/>


    <Button
        android:id="@+id/btnAceptarResultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aceptar"
        android:layout_marginTop="40dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"/>
</LinearLayout>